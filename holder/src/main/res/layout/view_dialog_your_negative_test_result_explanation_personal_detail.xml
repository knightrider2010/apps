<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:importantForAccessibility="yes">

    <TextView
        android:id="@+id/item_text"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:layout_gravity="top"
        android:layout_marginHorizontal="6dp"
        android:focusable="false"
        android:background="@drawable/shape_personal_detail_item_background"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:minWidth="66dp"
        android:textAppearance="@style/App.TextAppearance.MaterialComponents.Headline6.Montserrat"
        tools:text="MAA" />

    <TextView
        android:id="@+id/item_position"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="56dp"
        android:focusable="false"
        android:background="@drawable/shape_personal_detail_item_position_background"
        android:gravity="center"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textColor="@color/black"
        tools:text="1"
        tools:visibility="visible" />
</FrameLayout>
